<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bienvenido a Twitter</title>
    <script src="https://kit.fontawesome.com/5f5e2fe79d.js" crossorigin="anonymous"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/homeStyles.css" />
  </head>
  <body>
    <section>
      <div class="container">
        <div class="row">


            <!-- ---------------------- SIDEBAR --------------------- -->
          <div class="col-3 d-none d-md-block">
            <%- include("partials/leftSidebar") %> 
            
          </div>

          <!-- ------------------SIDEBAR END --------------------- -->


          <!-- ---------------- TWEET ZONE START ---------------- -->
          <div class=" col-md-6 g-0" id="parallelLines">
            
            <h2 id="home">Inicio </h2>

            <div class="d-flex">
            <div class="px-3 mt-2">
              <% if(user.profileImage.includes("http")) {%>
                <img

                  src="<%=user.profileImage%>"
                  class="profileImage"
                  alt="profile image"
                />
                <% } else{%>
                <img

                  src="/img/<%= user.profileImage%>"
                  class="profileImage"
                  alt="profile image"
                />
                <% } %>
            </div>
            <div id="textarea">
              <form action="/" method="post">
                <div class="form-group">
                  <label for="text"></label>
                  <textarea


                      class="form-control sacarBordeAzul"
                      id="text"
                      name="text"
                      rows="5"
                      maxlength="140"
                      placeholder="Qué está pasando?"
                  ></textarea>
                </div>
                <!-- <hr> -->
                <button id="small-tweet-btn" class="btn my-4 tweet-btn" type="submit">
                  Tweet
                </button>
              </form>
            </div>
          </div>
            <hr />

            <% for( const tweet of tweets) { %>

            <div class=" d-flex " style="width: 100%">
              <div class="px-3">
                <% if(tweet.user.profileImage.includes("http")) {%>
                  <img

                    src="<%=tweet.user.profileImage%>"
                    class="profileImage"
                    alt="profile image"
                  />
                  <% } else{%>
                  <img

                    src="/img/<%= tweet.user.profileImage%>"
                    class="profileImage"
                    alt="profile image"
                  />
                  <% } %>
              </div>
              <div class="px-3" style="width: 100%">
                <div>
                  <h6><strong>   <a   href="/profile/<%= tweet.user.id %> ">   <%= tweet.user.firstname + " " + tweet.user.lastname  %> </a></strong></h6>
                <a class="user"  href="/profile/<%= tweet.user.id %> ">
                  @<%= tweet.user.username %>
                </a>
                
                <p><%= tweet.text %></p>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-evenly align-items-center" >
              <i class="fa-regular fa-comment"></i>
              <i class="fa-solid fa-retweet"></i>
              <form action="/like" method="post">
                  <button id="like" type="submit" ">
                    <i class="fa-regular fa-heart"></i>
                  </button>
                </form>
                <i class="fa-solid fa-arrow-up-from-bracket"></i>
              </div>
            <hr />
            <% } %>
          </div>

          <!-- ------------------------TWEETS ZONE END ---------------------- -->


 <!-------------- TRENDING BAR ------------>
          <div class="col-3 d-none d-md-block">
            <%- include("partials/trendSidebar") %> 
       
          </div>
<!-- ------- TRENDING BAR END -------- -->


        </div>
      </div>
    </section>
  </body>
</html>

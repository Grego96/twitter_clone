  <body>
    <section>
      <div class="container">
        <div class="row">


            <!-- ---------------------- SIDEBAR --------------------- -->
          <div class="col-3 ">
            <ul >
              <li>
                <h2>
                  <a href="/"><i class="fa-brands fa-twitter"></i> </a>
                </h2>
              </li>
              <li>
                <h2>
                  <a href="/"></i>Home</a>
                </h2>
              </li>
              <li>

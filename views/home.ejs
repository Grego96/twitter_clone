                style="background-color: #1a8cd8; color: white; border-radius: 50px"
              >
                Tweet
              </button>
            </ul>
          </div>
          <div
            class="col-6"
            style="
              border-right: solid rgb(152, 151, 151) 1px;
              border-left: solid rgb(152, 151, 151) 1px;
            "
          >
            <h2>Home</h2>
            <form action="/" method="post">
              <!-- <div class="px-3">
                <img
                  style="width: 4rem; height: 4rem; border-radius: 50px"
                  src="< tweet.user.profileImage %> "
                  alt="profile image"
                />
              </div> -->
              <div class="form-group">
                <label for="text"></label>
                <textarea
                  style="background-color: black; color: white"
                  class="form-control"
                  id="text"
                  name="text"
                  rows="3"
                  maxlength="140"
                  placeholder="What's happening?"
                ></textarea>
              </div>
              <button
                class="btn btn my-2"
                type="submit"
                style="background-color: #1a8cd8; color: white; border-radius: 50px"
              >
                Tweet
              </button>
            </form>
            <hr />
            <% for( const tweet of tweets) { %>


            <div class="col-12 d-flex">
              <div class="px-3">
                <img
                  style="width: 4rem; height: 4rem; border-radius: 50px"
                  src="<%= tweet.user.profileImage %> "
                  alt="profile image"
                />
              </div>
              <div class="px-3">
                <div>
                <a style="color: white; text-decoration: none; font-weight: bolder" href="#">
                  <%= tweet.user.username %>
                </a>
                <p><%= tweet.text %></p>
                </div>
                <div class="d-flex justify-content-around" >
                  <div> <i class="fa-regular fa-comment"></i></div>
                 <div><i class="fa-solid fa-retweet"></i></div>
                  <div><i class="fa-regular fa-heart"></i></div>
                  <div><i class="fa-solid fa-arrow-up-from-bracket"></i></div>
                </div>
              </div>
            </div>
            <hr />
            <% } %>
          </div>
          <div class="col-3">
            <input
              class="bg-dark my-4 px-4 py-2 "
              style="border-radius: 50px; "
              disabled
              type="text"
              placeholder="Search Twitter"

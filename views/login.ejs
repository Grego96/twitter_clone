   <form action="/login" method="post">

      <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered h-100">
          <div class="modal-content">
            <button type="button" class="btn-close p-3" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="contenido-modal h-100 d-flex flex-column justify-content-between">
              <div class="elements h-100">
                <h4>Inicia sesión en Twitter</h4>
                <div class="botones_modal">
                  <button class="register register_google">Registrarse con Google</button>
                  <button class="register register_apple">Registrarse con Apple</button>
                  <div class="o">
                    <p>------- </p>
                    <p>o</p>
                    <p> -------</p>
                  </div>
                </div>
                <div class="siguiente">
                  <input class="input-email" type="text" placeholder="Correo electrónico o nombre de usuario" name="user">
                  <button class="button-prevent register siguiente-btn" data-bs-toggle="modal" data-bs-target="#exampleModal2">Siguiente</button>
                  <button class="button-prevent register olvidaste-btn">¿Olvidaste tu contraseña?</button>
                  <p>¿No tienes una cuenta? <a href="#">Regístrate</a></p>
                </div>
              </div>
          </div>
